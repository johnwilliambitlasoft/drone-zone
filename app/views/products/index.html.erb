<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Product name</th>
      <th>Product type</th>
      <th>Product accessories</th>
      <th>Product description</th>
      <th>Per day price</th>
      <th>Product available from date</th>
      <th>Product available to date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.product_type %></td>
        <td><%= product.product_accessories %></td>
        <td><%= product.product_description %></td>
        <td><%= product.per_day_price %></td>
        <td><%= product.product_available_from_date %></td>
        <td><%= product.product_available_to_date %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

