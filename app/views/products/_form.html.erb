    <%= form.label :product_description %>
    <%= form.text_field :product_description %>
  </div>

  <div class="field">
    <%= form.label :per_day_price %>
    <%= form.text_field :per_day_price %>
  </div>

  <div class="field">
    <%= form.label :product_available_from_date %>
    <%= form.date_field :product_available_from_date %>
  </div>

  <div class="field">
